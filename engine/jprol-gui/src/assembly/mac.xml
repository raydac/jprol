<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>withjre_windows</id>

    <includeBaseDirectory>false</includeBaseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>

    <formats>
        <format>jar</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <excludes>
                <exclude>JProlGui.app${file.separator}Contents${file.separator}MacOS${file.separator}jprolgui</exclude>
            </excludes>
            <includes>
                <include>*/**</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac-common</directory>
            <outputDirectory>JProlGui.app</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}${file.separator}jre_macos</directory>
            <outputDirectory>
                ${file.separator}JProlGui.app${file.separator}Contents${file.separator}MacOS${file.separator}jre
            </outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>
                ${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac${file.separator}JProlGui.app${file.separator}Contents${file.separator}MacOS${file.separator}jprolgui
            </source>
            <destName>jprolgui</destName>
            <outputDirectory>${file.separator}JProlGui.app${file.separator}Contents${file.separator}MacOS
            </outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>${project.build.directory}${file.separator}${app.name}.jar</source>
            <destName>${artifactId}-${version}.jar</destName>
            <outputDirectory>${file.separator}JProlGui.app${file.separator}Contents${file.separator}MacOS
            </outputDirectory>
        </file>
    </files>
</assembly>
